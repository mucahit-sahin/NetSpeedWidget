<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="NetSpeedWidget.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:NetSpeedWidget.ViewModels"
        mc:Ignorable="d"
        Title="Network Speed Widget" 
        Height="28" 
        Width="180"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <FontFamily x:Key="MainFont">Segoe UI Variable Display</FontFamily>
    </Window.Resources>

    <Border Background="#2D2D2D"
            CornerRadius="16"
            BorderBrush="#404040"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" 
                            BlurRadius="10" 
                            Opacity="0.4"
                            Color="#000000"/>
        </Border.Effect>

        <Grid Margin="10,2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Settings Button -->
            <Button Grid.Column="0"
                    Content="⚙"
                    Click="SettingsButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#808080"
                    FontFamily="{StaticResource MainFont}"
                    FontSize="12"
                    Width="16"
                    Height="16"
                    Padding="0"
                    Margin="0,0,8,0"
                    Cursor="Hand"/>

            <!-- Download Speed -->
            <Grid Grid.Column="1" MinWidth="60">
                <TextBlock Text="↓" 
                         Foreground="#4CAF50"
                         FontSize="12"
                         FontWeight="SemiBold"
                         FontFamily="{StaticResource MainFont}"
                         Margin="0,0,2,0"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"/>
                <TextBlock Text="{Binding NetworkSpeed.DownloadSpeedFormatted, Mode=OneWay}"
                         Foreground="#E0E0E0"
                         FontSize="12"
                         FontFamily="{StaticResource MainFont}"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Margin="12,0,0,0"
                         FontWeight="SemiBold"/>
            </Grid>

            <!-- Separator -->
            <TextBlock Grid.Column="2" 
                     Text=" "
                     Foreground="#666666"
                     FontSize="12"
                     FontFamily="{StaticResource MainFont}"
                     Margin="4,0"
                     VerticalAlignment="Center"/>

            <!-- Upload Speed -->
            <Grid Grid.Column="3" MinWidth="60">
                <TextBlock Text="↑" 
                         Foreground="#FF9800"
                         FontSize="12"
                         FontWeight="SemiBold"
                         FontFamily="{StaticResource MainFont}"
                         Margin="0,0,2,0"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"/>
                <TextBlock Text="{Binding NetworkSpeed.UploadSpeedFormatted, Mode=OneWay}"
                         Foreground="#E0E0E0"
                         FontSize="12"
                         FontFamily="{StaticResource MainFont}"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Margin="12,0,0,0"
                         FontWeight="SemiBold"/>
            </Grid>
        </Grid>
    </Border>
</Window> 