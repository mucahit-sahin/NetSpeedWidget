<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="NetSpeedWidget.Views.NetworkUsageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:NetSpeedWidget.ViewModels"
        mc:Ignorable="d"
        Title="Network Usage" 
        Height="400" 
        Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <FontFamily x:Key="MainFont">Segoe UI Variable Display</FontFamily>
    </Window.Resources>

    <Border Background="#2D2D2D"
            CornerRadius="16"
            BorderBrush="#404040"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" 
                            BlurRadius="10" 
                            Opacity="0.4"
                            Color="#000000"/>
        </Border.Effect>

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Network Usage"
                         Foreground="#E0E0E0"
                         FontSize="16"
                         FontWeight="SemiBold"
                         FontFamily="{StaticResource MainFont}"
                         HorizontalAlignment="Left"/>
                <Button Content="✕"
                        Click="CloseButton_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="20"
                        Height="20"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#E0E0E0"
                        FontFamily="{StaticResource MainFont}"
                        FontSize="12"/>
            </Grid>

            <!-- Applications List -->
            <ListView Grid.Row="1" 
                      Background="Transparent"
                      BorderThickness="0"
                      ItemsSource="{Binding NetworkUsages}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Process Icon -->
                            <Image Grid.Column="0"
                                   Source="{Binding Icon}"
                                   Width="16"
                                   Height="16"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            
                            <!-- Process Name -->
                            <TextBlock Grid.Column="1"
                                     Text="{Binding ProcessName}"
                                     Foreground="#E0E0E0"
                                     FontSize="12"
                                     FontFamily="{StaticResource MainFont}"
                                     VerticalAlignment="Center"/>
                            
                            <!-- Download Speed -->
                            <TextBlock Grid.Column="2"
                                     Foreground="#4CAF50"
                                     FontSize="12"
                                     FontWeight="SemiBold"
                                     FontFamily="{StaticResource MainFont}"
                                     VerticalAlignment="Center"
                                     Margin="10,0,15,0">
                                <Run Text="↓"/>
                                <Run Text="{Binding DownloadSpeedFormatted, Mode=OneWay}"/>
                            </TextBlock>
                            
                            <!-- Upload Speed -->
                            <TextBlock Grid.Column="3"
                                     Foreground="#FF9800"
                                     FontSize="12"
                                     FontWeight="SemiBold"
                                     FontFamily="{StaticResource MainFont}"
                                     VerticalAlignment="Center">
                                <Run Text="↑"/>
                                <Run Text="{Binding UploadSpeedFormatted, Mode=OneWay}"/>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderThickness="0"
                                            Padding="5">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>
    </Border>
</Window> 